- title "Equipment: #{@equipment.tag}"

.grid_24
  %ul
    %li= "Type: #{@equipment.equipment_type}"
    %li= "Model: #{@equipment.equipment_model}"
    %li= "IP: #{@equipment.ip_address}"
    %li= "mac: #{@equipment.mac_address}"
    %li= "Location #{@equipment.location}"
    %li= "User #{@equipment.equipment_user}"
    %li= "Estado #{@equipment.online? ? 'ON' : 'OFF'}"
    %li= "Sistema: #{@equipment.uname}"
.clear

.grid_24
  %nav#actions
    %ul
      %li= link_to "Edit", edit_equipment_path(@equipment)
      %li= link_to "Destroy", @equipment, :confirm => 'De veras?', :method => :delete
      %li= link_to "Back", equipments_path
.clear
