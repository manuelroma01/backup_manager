<% title "Usuarios" %>

<%= will_paginate %>

<table>
  <tr>
    <th>Username</th>
    <th colspan="3" >Operaciones</th>
  </tr>
  
  <% @users.each do |user| %>
    <tr>
      <td><%= "#{user.username}" %></td>
      <td><%= link_to "Show", user %></td>
      <td><%= link_to "Edit", edit_user_path(user) %></td>
      <td><%= link_to "Delete", user, :method => :delete, :confirm => 'Que te lo cargas!', :title => "Delete #{user.username}" %></td>
    <tr>
  <% end %>
</table>

<%= will_paginate %>

<p><%= link_to "Nuevo usuario", new_user_path %>
