<% title "Usuarios" %>

<%= will_paginate %>

<table>
  <tr>
    <th>Username</th>
    <th colspan="3" >Operaciones</th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%= user.username %></td>
      <td><%= link_to "Show", user %></td>
      <td><%= link_to "Edit", edit_user_path(user) %></td>
      <td><%= link_to "Destroy", user, :confirm => 'Que te lo cargas!', :method => :delete, :title => "Delete #{user.username}" %></td>
    <tr>
  <% end %>
</table>

<%= will_paginate %>

<p><%= link_to "Nuevo usuario", new_user_path %>
