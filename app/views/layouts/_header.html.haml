%header
  .grid_24
    %h1#site-header CREAL manager
  .clear
  
  .grid_18
    %nav#main
      - if user_signed_in?
        %ul
          %li= link_to "Home", root_path
          - if can? :manage, Equipment
            %li= link_to "Equipments", equipments_path
          - if can? :manage, User
            %li= link_to "Users", users_path
          - if can? :manage, Room
            %li= link_to "Rooms", rooms_path
          - if can? :manage, Reserve
            %li= link_to "Reserves", reserves_path

  .grid_6
    %nav#sign
      - if user_signed_in?
        = "Signed in as #{current_user.username}"
        = link_to "Sign out", destroy_user_session_path
      - else
        = link_to "Sign in", new_user_session_path
  .clear
