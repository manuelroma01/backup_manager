<%= form_for @workstation do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :tag %><br />
    <%= f.text_field :tag %>
  </p>
  
  <p>
    <%= f.label :ip %><br />
    <%= f.text_field :ip %>
  </p>
  
  <p>
    <%= f.label :mac %><br />
    <%= f.text_field :mac %>
  </p>
  <p><%= f.submit %></p>
<% end %>
